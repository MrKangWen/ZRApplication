<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:onClick="onClick"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_image_preview_left_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="onClick"
            android:padding="12dp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/tv_image_preview_center_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_image_preview_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector_select_image_btn"
            android:onClick="onClick"
            android:text="选择"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_image_preview_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_image_preview_multiple_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white">

    </LinearLayout>
</LinearLayout>
