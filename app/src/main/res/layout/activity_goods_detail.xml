<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sml="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    tools:context=".goods.GoodsDetailActivity">

    <include layout="@layout/layout_title_base_bar" />


    <FrameLayout
        android:id="@+id/detailFl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="商品未开始，请耐心等待" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/detailLiveLl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="直播图文1（左滑分享图文）"
                    android:textColor="@android:color/darker_gray" />

                <com.tubb.smrv.SwipeHorizontalMenuLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    sml:sml_auto_open_percent="0.2"
                    sml:sml_scroller_duration="250"
                    sml:sml_scroller_interpolator="@android:anim/bounce_interpolator">

                    <LinearLayout
                        android:id="@id/smContentView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/detailIv1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:src="@android:color/darker_gray" />


                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="90dp">


                            <TextView
                                android:id="@+id/detailTv1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:scrollbars="vertical"
                                android:text="text"
                                android:textSize="14sp" />


                        </ScrollView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/smMenuViewRight"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/detailShareTv1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#C0473E"
                            android:gravity="center"
                            android:text="分享"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                    </LinearLayout>
                </com.tubb.smrv.SwipeHorizontalMenuLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/detailLiveLl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="直播图文2（左滑分享图文）"
                    android:textColor="@android:color/darker_gray" />

                <com.tubb.smrv.SwipeHorizontalMenuLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    sml:sml_auto_open_percent="0.2"
                    sml:sml_scroller_duration="250"
                    sml:sml_scroller_interpolator="@android:anim/bounce_interpolator">

                    <LinearLayout
                        android:id="@id/smContentView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/detailIv2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:layout_margin="2dp"
                            android:src="@android:color/darker_gray" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="90dp">


                            <TextView
                                android:id="@+id/detailTv2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:scrollbars="vertical"
                                android:text="text"
                                android:textSize="14sp" />

                        </ScrollView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/smMenuViewRight"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/detailShareTv2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#C0473E"
                            android:gravity="center"
                            android:text="分享"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                    </LinearLayout>
                </com.tubb.smrv.SwipeHorizontalMenuLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/detailLiveLl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="直播图文3（左滑分享图文）"
                    android:textColor="@android:color/darker_gray" />

                <com.tubb.smrv.SwipeHorizontalMenuLayout
                    android:id="@+id/detailSwipeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    sml:sml_auto_open_percent="0.2"
                    sml:sml_scroller_duration="250"
                    sml:sml_scroller_interpolator="@android:anim/bounce_interpolator">

                    <LinearLayout
                        android:id="@id/smContentView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/detailIv3"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:src="@android:color/darker_gray" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="90dp">

                            <TextView
                                android:id="@+id/detailTv3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:scrollbars="vertical"
                                android:text="text"
                                android:textSize="14sp" />
                        </ScrollView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/smMenuViewRight"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/detailShareTv3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#C0473E"
                            android:gravity="center"
                            android:text="分享"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                    </LinearLayout>
                </com.tubb.smrv.SwipeHorizontalMenuLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/detailIv4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@android:color/darker_gray" />

                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/detailGoodsTitleTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:text="title"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/detailCouponTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detailGoodsTitleTv"
                        android:layout_margin="6dp"
                        android:text="优惠券10"
                        android:background="@drawable/shape_rect_graybg_corners10"
                        android:paddingBottom="2dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/detailSurplusTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/detailGoodsTitleTv"
                        android:layout_margin="6dp"
                        android:text="剩余：10"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/detailCouponAfterPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detailCouponTv"
                        android:layout_margin="6dp"
                        android:text="劵后价：10"
                        android:textColor="@color/colorRed_e64340"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/detailSalesTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/detailCouponTv"
                        android:layout_margin="6dp"
                        android:text="销量：10"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/detailExtractTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detailCouponAfterPriceTv"
                        android:layout_margin="6dp"
                        android:text="佣金：10%"
                        android:textColor="@color/colorRed_e64340"
                        android:textSize="12sp" />

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/detail_share_wx_moments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorRed_FF2200"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_fragment_home_share_wx" />
                </FrameLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray_F0F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/detail_perfect_wx_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_rect_whitebg_blackbor1_cor4"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="4dp"
                    android:text="完善朋友圈"
                    android:textColor="@color/colorBlack_333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/detail_copy_tkl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/selector_rect_whitebg_redbor1_cor4"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="4dp"
                    android:text="复制淘口令"
                    android:textColor="@color/colorRed_e64340"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/detail_share_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/selector_rect_whitebg_redbor1_cor4"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="4dp"
                    android:text="分享到微信"
                    android:textColor="@color/colorRed_e64340"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>