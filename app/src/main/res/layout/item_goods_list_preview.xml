<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">


        <ImageView
            android:id="@+id/preview_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:id="@+id/previewDetailLl"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">


            <com.zhaorou.zrapplication.widget.view.ScrollTextView
                android:id="@+id/preview_title"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_rect_graybg_corners10"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:scrollbars="horizontal"
                android:text="牛奶滋润补水沐浴露800ml"
                android:textColor="@color/colorBlack_333333"
                android:textSize="13sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/preview_pay_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="卷后价：14.90"
                    android:textColor="@color/colorRed_e64340"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/preview_commission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="32dp"
                    android:gravity="center"
                    android:text="佣金：14.90%"
                    android:textColor="@color/colorRed_e64340"
                    android:textSize="12sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/preview_live_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:text="直播时间：2018-20"
                android:textColor="@color/colorBlack_333333"
                android:textSize="12sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/preview_share_wx_moments"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorRed_FF2200"
            android:padding="6dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_fragment_home_share_wx" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray_F0F0F0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/preview_set_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@drawable/selector_rect_whitebg_redbor1_cor4"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:text="设置提醒"
            android:textColor="@color/colorRed_e64340"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/preview_share_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/selector_rect_whitebg_redbor1_cor4"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:text="分享到微信"
            android:textColor="@color/colorRed_e64340"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorGray_80F5F5F5" />
</LinearLayout>