<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="16dp"
    android:paddingTop="6dp">

    <LinearLayout
        android:id="@+id/search_view_layout_search_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_corner_rect_bgf5"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_search"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:hint="找肉单，就上找肉单App"
            android:maxLines="1"
            android:textSize="13sp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/right_btn_layout_search_title"
        android:layout_width="48dp"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/right_icon_layout_search_title"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_menu"/>

        <TextView
            android:id="@+id/right_text_layout_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"/>
    </FrameLayout>
</LinearLayout>